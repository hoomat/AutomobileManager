    <script type="text/javascript">

        var spinner;
        $(function () {
            var oTable1 = $('#table').dataTable({
                "bFilter": false,
                "language": {
                    "lengthMenu": "نمایش _MENU_ سطرها در صفحه",
                    "zeroRecords": "رکوردی وجود ندارد - متاسفانه",
                    "info": "نمایش صفحه _PAGE_ از _PAGES_",
                    "infoEmpty": "رکوردی وجود ندارد",
                    "infoFiltered": "(فیلتر شده از _MAX_ رکورد )"
                },
                "bServerSide": true,
                "sAjaxSource": "/Driver/GetDrivers",
                "bProcessing": false,
                "aoColumns": [
			           null, null,null,
                       { "bSortable": false }
                ],
                "fnCreatedRow": function (nRow, aData, iDataIndex) {
                    $('td:eq(3)', nRow).html('<div class="hidden-phone visible-desktop action-buttons"><a class="blue" id="' + aData[3] + '"  onclick="onedit(this)"   href="#"><i class="fa fa-edit bigger-130"></i></a><a class="red" id="' + aData[3] + '" onclick="ondelete(this)" href="#"><i class="fa fa-trash bigger-130"></i></a></div>').addClass('td-actions');
                },
                "fnServerParams": function (aoData) {
                    aoData.push({ "name": "driverNameSearch", "value": $("#driverNameSearch").val() });
                    aoData.push({ "name": "DegreeSearch", "value": $("#DegreeSearch").val() });
                },
            });
        })

        $('#search').click(function () {
            Sppiner();
            var containerholder = $("#content");
            var url = "@Url.Action("Search", "Driver")";

            $.ajax({
                cache: false,
                type: "GET",
                url: url,
                success: function (data) {
                    containerholder.html('');
                    containerholder.html(data);
                    $('#table').DataTable().ajax.reload();
                    spinner.stop();
                    destroyloader();
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    alert('Error: ' + xhr.statusText);
                    spinner.stop();

                }
            });

        });
        $('#new').click(function () {
            Sppiner();
            var url = "@Url.Action("New", "Driver")";
            var containerholder = $("#content");
            $.ajax({
                cache: false,
                type: "GET",
                url: url,
                success: function (data) {
                    containerholder.html('');
                    containerholder.html(data);
                    spinner.stop();
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    alert('Error: ' + xhr.statusText);
                    spinner.stop();
                }
            });

        });

        function onedit(element) {
            var id = $(element).attr('id');
            Sppiner();
            var url = "@Url.Action("Edit", "Driver")";
            var containerholder = $("#content");
            $.ajax({
                cache: false,
                type: "GET",
                url: url,
                data: { "id": id },
                success: function (data) {
                    containerholder.html('');
                    containerholder.html(data);
                    spinner.stop();
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    alert('Error: ' + xhr.statusText);
                    spinner.stop();
                }
            });
        };

        function ondelete(element) {
            var id = $(element).attr('id');
            Sppiner();
            var url = "@Url.Action("Delete", "Driver")";
            var containerholder = $("#content");
            $.ajax({
                cache: false,
                type: "GET",
                url: url,
                data: { "id": id },
                success: function (data) {
                    containerholder.html('');
                    containerholder.html(data);
                    spinner.stop();
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    alert('Error: ' + xhr.statusText);
                    spinner.stop();
                }
            });
        };
     
</script>
