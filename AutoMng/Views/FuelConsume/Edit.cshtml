                                    @Html.ValidationMessageFor(model => model.FuelConsume.PaymentType, "", new { @class = "text-danger" })
                                </div>
                            </div>
               
                        </div>
                        <div class="span6 ">
                    
                            <div class="control-group">
                                <label class="control-label">@AVAResource.Resource.FuelCardNumber</label>
