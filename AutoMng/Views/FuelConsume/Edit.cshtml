                                    @Html.ValidationMessageFor(model => model.FuelConsume.FuelCard, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">@AVAResource.Resource.FualStation</label>
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.FuelConsume.FualStation, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.FuelConsume.FualStation, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">@AVAResource.Resource.AmountPaid</label>
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.FuelConsume.AmountPaid, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.FuelConsume.AmountPaid, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">@AVAResource.Resource.DistanceBeforReFual</label>
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.FuelConsume.Mileag, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.FuelConsume.Mileag, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">@AVAResource.Resource.Mobile_Fual_Type</label>
                                <div class="controls">
                                    @Html.DropDownListFor(model => model.FualTypeID, Model.FualTypes, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.FuelConsume.FualType, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">@AVAResource.Resource.VolumeFuel</label>
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.FuelConsume.VolumeFuel, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.FuelConsume.VolumeFuel, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
     <div class="row-fluid  ">
                        <div class="control-group">
                            <div class="controls">
                                <label class="">@AVAResource.Resource.Description</label>
                                @Html.TextAreaFor(model => model.FuelConsume.Description, new { @class = "span12", @style = "height:90px" })
                                @Html.ValidationMessageFor(model => model.FuelConsume.Description, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid  ">
                        <button class=" btn btn-small btn-primary">
                            <i class="icon-edit "></i>
                            @AVAResource.Resource.Save
                        </button>
                        <button class=" btn btn-small btn-purple" type="button" onclick="cancel()">
                            <i class="icon-edit "></i>
                            @AVAResource.Resource.Cancel
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


<script>
    function cancel() {
        var containerholder = $("#content");
        containerholder.html('');
    }
    $(".chzn-select").chosen();
    $(function () {
        var tag_input = $('#form-field-tags');
        if (!(/msie\s*(8|7|6)/.test(navigator.userAgent.toLowerCase())))
            tag_input.tag({ placeholder: tag_input.attr('placeholder') });
        else {
            //display a textarea for old IE, because it doesn't support this plugin or another one I tried!
            tag_input.after('<textarea id="' + tag_input.attr('id') + '" name="' + tag_input.attr('name') + '" rows="3">' + tag_input.val() + '</textarea>').remove();
            //$('#form-field-tags').autosize({append: "\n"});
        }
    })
    function OnBegin() {
        Sppiner();
    }
    function OnComplete() {
        spinner.stop();
    }
    function OnFailure(arg) {
        spinner.stop();
    }
    function OnSuccess(result) {
        var data = '';
        if (result.success) {
            data = '<div class="alert alert-success"><button type="button" class="close" data-dismiss="alert">' +
           '<i class="icon-remove"></i></button><strong> <i class="icon-ok"></i></strong>' +
          result.description +
            '<br></div>'
        }
        else {
            data = '<div class="alert alert-warning"><button type="button" class="close" data-dismiss="alert">' +
          '<i class="icon-remove"></i></button><strong>  <i class="icon-ok"></i></strong>' +
           result.description +
          '<br></div>'
        }
        $('#content').html(data);
        $('#table').DataTable().ajax.reload();
        spinner.stop();
    }
