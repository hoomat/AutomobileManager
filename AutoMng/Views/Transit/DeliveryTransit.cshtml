                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">@AVAResource.Resource.Driver</label>
                                <div class="controls">
                                    @Html.DropDownListFor(model => model.DriverID, Model.Drivers, new { @class = "chzn-select" })
                                    @Html.ValidationMessageFor(model => model.DriverID, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">@AVAResource.Resource.NumberCard_TrafficCard</label>
                                <div class="controls">
                                    @Html.DropDownListFor(model => model.CardTrafficID, Model.CardTraffics, new { @class = "chzn-select", @id = "driverlist" })
