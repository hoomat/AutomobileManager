                                </div>
                            </div>
                            @*<div class="control-group">
                                <label class="control-label">@AVAResource.Resource.MileagAfterTrip</label>
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.Transit.MileagAfterTrip, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Transit.MileagAfterTrip, "", new { @class = "text-danger" })
                                </div>
                            </div>*@
                        </div>
                        <div class="span6 ">
                            <div class="control-group">
                                <label class="control-label">@AVAResource.Resource.DeliveryDate</label>
                                <div class="controls">
                                    <span class="block input-icon @AVAResource.Resource.Input_icon ">
                                        <input type="text" class="form-control" id="exampleInput3" value=@Model.PersianDeliveryDate name="PersianDeliveryDate" placeholder=@AVAResource.Resource.DeliveryDate data-mddatetimepicker="true" data-placement="right" />
                                        <i class="icon-calendar"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">@AVAResource.Resource.DeliveryHour</label>
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.HourDelivery, new { @class = "form-control", @style = "width:20px" })
                                    :
                                    @Html.TextBoxFor(model => model.MinuteDelivery, new { @class = "form-control", @style = "width:20px" })
                                    @Html.ValidationMessageFor(model => model.HourDelivery, "", new { @class = "text-danger" })
                                    @Html.ValidationMessageFor(model => model.MinuteDelivery, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            @*<div class="control-group">
                                <label class="control-label">@AVAResource.Resource.ReturnDate</label>
                                <div class="controls">
                                    <span class="block  input-icon @AVAResource.Resource.Input_icon">
                                        <input type="text" class="form-control" id="exampleInput3" value=@Model.PersianReturnDate name="PersianReturnDate" data-enabletimepicker="true" placeholder=@AVAResource.Resource.ReturnDate data-mddatetimepicker="true" data-placement="right" />
                                        <i class="icon-calendar"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">@AVAResource.Resource.ReturnHour</label>
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.HourReturn, new { @class = "form-control", @style = "width:20px" })
                                    :
                                    @Html.TextBoxFor(model => model.MinuteReturn, new { @class = "form-control", @style = "width:20px" })
                                    @Html.ValidationMessageFor(model => model.HourReturn, "", new { @class = "text-danger" })
                                    @Html.ValidationMessageFor(model => model.MinuteReturn, "", new { @class = "text-danger" })
                                </div>
                            </div>*@
                        </div>
                    </div>
                    <div class="row-fluid  ">
                        <div class="control-group">
                            <label class="control-label">@AVAResource.Resource.Description</label>
                            <div class="controls">
                                @Html.TextAreaFor(model => model.Description, new { @class = "span12", @style = "height:90px" })
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div>
                            <h3 class="header smaller lighter green">
                                <i class="icon-group"></i>
                                @AVAResource.Resource.Attendances
                            </h3>
                            <button id="addattendance" type="button" class="btn btn-minier btn-purple fa fa-plus"> تعریف </button>
                           @* <i id="addattendance" class=" btn btn-minier btn-purple fa fa-plus bigger-130"></i>*@
                            <div class="hr hr-18 dotted hr-double"></div>
                            <ul id="attendanceEditor" style="list-style-type: none">
                                @if (Model.Attendances != null)
                                {
                                    foreach (DAL.Attendance attendance in Model.Attendances)
                                    {
                                        Html.RenderPartial("AttendanceEntryEditor", attendance);
                                    }
                                }
                            </ul>
                        </div>
                        <div class="hr hr-18 dotted hr-double"></div>

                    </div>
                    <div class="row-fluid  ">
                        <button class=" btn btn-small btn-primary">
                            <i class="icon-edit "></i>
                            @AVAResource.Resource.Save
                        </button>
                        <button class=" btn btn-small btn-purple" type="button" onclick="cancel()">
                            <i class="icon-edit "></i>
                            @AVAResource.Resource.Cancel
                        </button>
                    </div>
                }



            </div>
        </div>
    </div>

<script>
    $(function () {
        $("#attendanceEditor").sortable();
        $("#addattendance").click(function () {
            $.get('/Transit/AttendanceEntryEditor', function (template) {
                $("#attendanceEditor").append(template);
            });
        });
    });
    function cancel() {
        var containerholder = $("#content");
        containerholder.html('');
    }
    $(".chzn-select").chosen();
    $(function () {
        $(document).ajaxComplete(function (event, request, settings) {
            $.validator.unobtrusive.parse(document);
        });
    });
    jQuery.browser = {};
    $(function () {
        var tag_input = $('#form-field-tags');
        if (!(/msie\s*(8|7|6)/.test(navigator.userAgent.toLowerCase())))
            tag_input.tag({ placeholder: tag_input.attr('placeholder') });
        else {
            tag_input.after('<textarea id="' + tag_input.attr('id') + '" name="' + tag_input.attr('name') + '" rows="3">' + tag_input.val() + '</textarea>').remove();
        }
    })
